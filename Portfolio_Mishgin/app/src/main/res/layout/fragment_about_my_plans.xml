<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyPlansFragment">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="UselessParent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:isScrollContainer="false"
        android:orientation="vertical"
        android:padding="10dp"
        android:scrollbars="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/material_drawer_account_header_title"
            android:text="@string/plans_title"
            android:textAlignment="center"
            android:textColor="@color/material_drawer_dark_primary_text"
            android:textSize="@dimen/material_drawer_account_header_title"
            android:fontFamily="@font/rosario"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/future"
            android:textAlignment="center" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="15dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/merienda"
            android:textColor="@color/material_drawer_dark_primary_text"
            android:textSize="16sp"
            android:text="@string/plans_text"/>

    </LinearLayout>

</ScrollView>

</FrameLayout>